        \hspace{18pt}\usebeamercolor[fg]{headsepline}\rule{4.54in}{0.4pt}
    \fi
    \vspace{10pt}
}

\defbeamertemplate*{footline}{TUDo}[1][0]
{
    \hspace{15pt}
    \begin{beamercolorbox}[wd=4.54in]{footline}
        \begin{beamercolorbox}[wd=2.5in, left]{author}
            \usebeamerfont{author}\insertauthor, \usebeamerfont{date}\insertdate
        \end{beamercolorbox}
        \begin{beamercolorbox}[wd=2in, right]{frame number}
            \ifnum\insertframenumber>0
            \usebeamerfont{page number in head/foot}\insertframenumber /\inserttotalframenumber
            \fi
        \end{beamercolorbox}
    \end{beamercolorbox}
    \vspace{12pt}
}

\mode<all>
