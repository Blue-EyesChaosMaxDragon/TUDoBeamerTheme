\mode<presentation>

\setbeamersize{text margin left=18pt}
\setbeamersize{text margin right=18pt}

\defbeamertemplate*{headline}{TUDo}[1][0]
{
    \leftskip=18pt
    \vspace{9.3pt}
    \begin{beamercolorbox}[wd=4.54in, ht=0.75cm]{header}
       \begin{beamercolorbox}[ht=0.75cm, wd=0.3\textwidth]{institute}
            \includegraphics[height=0.75cm]{TU-Logo.jpg}
            \hfill
        \end{beamercolorbox}
        \hfill
        \begin{beamercolorbox}[ht=0.75cm, wd=0.3\textwidth,left]{section in header}
            \vbox to 0.75cm{\vfil\small\insertsection\par\vspace{3pt}\tiny\insertsubsection\vfil}
        \end{beamercolorbox}
        \begin{beamercolorbox}[ht=0.75cm, wd=0.2\textwidth,right]{institute}
            \vbox to 0.75cm{\vfil\insertinstitute\vfil}
        \end{beamercolorbox}
    \end{beamercolorbox}
    \vspace{5pt}
    \ifnum\insertframenumber>0
        \hspace{18pt}\usebeamercolor[fg]{headsepline}\rule{4.54in}{0.5pt}
    \fi
    \vspace{5pt}
}

\defbeamertemplate*{frametitle}{TUDo}[1][0]
{
    \begin{beamercolorbox}[wd=\textwidth]{frametitle}
    \usebeamerfont{frametitle}\insertframetitle
    \end{beamercolorbox}
}

    

\defbeamertemplate*{footline}{TUDo}[1][0]
{
    \hspace{15pt}
    \begin{beamercolorbox}[wd=4.54in]{footline}
        \begin{beamercolorbox}[wd=2.5in, left]{author}
            \insertauthor, \insertdate
        \end{beamercolorbox}
        \begin{beamercolorbox}[wd=2in, right]{frame number}
            \ifnum\insertframenumber>0
            \insertframenumber /\inserttotalframenumber
            \fi
        \end{beamercolorbox}
    \end{beamercolorbox}
    \vspace{10pt}
}

\mode
<all>
